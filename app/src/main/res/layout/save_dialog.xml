<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="향 남기기"
        android:textColor="@color/myblack"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="28dp"
        android:background="@color/colorAccent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/save_dialog_line1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="향 이름"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/myblack"/>

        <EditText
            android:id="@+id/save_dialog_edittext_name"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="0dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_dialog_textview_info"
        android:gravity="center"
        android:text="향 정보"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="@color/myblack"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_dialog_save_button"
            android:text="저장"
            android:background="@drawable/originbutton"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_dialog_cancel_button"
            android:text="취소"
            android:background="@drawable/originbutton"/>

    </LinearLayout>

</LinearLayout>