<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="카트리지 향 설정"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="28dp"
        android:background="@color/colorAccent"
        />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/custom_dialog_spinner"
        android:background="@color/lightgray"></Spinner>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/custom_dialog_button_ok"
            android:text="확인"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/originbutton"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/custom_dialog_button_cancel"
            android:text="취소"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/originbutton"/>

    </LinearLayout>
</LinearLayout>