<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_emotion_relativelayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="심박수 측정하기"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="카메라렌즈에 손가락을 대주세요."
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="@color/myblack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/fragment_emotion_progressbar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:max="100"
                android:indeterminate="true"
                android:progress="0"/>

            <TextView
                android:id="@+id/fragment_emotion_textview_heart"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="HEART RATE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></TextView>

        </RelativeLayout>


        <SurfaceView
            android:id="@+id/fragment_emotion_preview"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"></SurfaceView>
<!--
        <TextView
            android:id="@+id/fragment_emotion_rollavg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18dp"/>
-->
        <TextView
            android:id="@+id/fragment_emotion_img_avg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="25dp"
            android:textAlignment="center"/>


    </LinearLayout>

</RelativeLayout>