<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputCatridgeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카트리지 향 입력하기"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_catridge_line1"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/input_catridge_button1"
            android:background="@drawable/circlebutton"
            android:text="입력"
            android:textColor="@color/myblack"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/input_catridge_button2"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="입력"
            android:textColor="@color/myblack"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/input_catridge_button3"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="입력"
            android:textColor="@color/myblack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_catridge_line1"
        android:id="@+id/input_catridge_line2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/input_catridge_button4"
            android:background="@drawable/circlebutton"
            android:text="입력"
            android:textColor="@color/myblack"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/input_catridge_button5"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="입력"
            android:textColor="@color/myblack"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/input_catridge_button6"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="입력"
            android:textColor="@color/myblack"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="등록"
        android:textSize="20dp"
        android:id="@+id/input_catridge_register_button"
        android:layout_below="@id/input_catridge_line2"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:onClick="OKregister"
        android:background="@drawable/originbutton"/>

</RelativeLayout>