<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputCatridgeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카트리지 향 입력하기"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_catridge_line1"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/input_catridge_button1"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="15dp"
            android:text="z"
            android:textColor="#FFFFFF"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/input_catridge_button2"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="z"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/input_catridge_button3"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="z"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_catridge_line1"
        android:id="@+id/input_catridge_line2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:textColor="#FFFFFF">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/input_catridge_button4"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="15dp"
            android:text="z"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/input_catridge_button5"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="z"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/input_catridge_button6"
            android:background="@drawable/circlebutton"
            android:layout_marginLeft="10dp"
            android:text="z"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록하기"
        android:id="@+id/input_catridge_register_button"
        android:layout_below="@id/input_catridge_line2"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:onClick="OKregister"/>

</RelativeLayout>