<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="350dp"
       android:layout_marginTop="100dp"
       android:src="@drawable/fireworks"
       android:id="@+id/turnon_fragment_imageview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/turnon_fragment_textview"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@+id/turnon_fragment_imageview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/turnon_fragment_textview"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="STOP"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/turnon_fragment_button_stop"
            android:layout_weight="1"
            android:background="@drawable/originbutton"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="향 남기기"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/turnon_fragment_button_save"
            android:layout_weight="1"
            android:background="@drawable/originbutton"/>

    </LinearLayout>

</RelativeLayout>